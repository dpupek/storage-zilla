<Window x:Class="AzureFilesSync.Desktop.Dialogs.ErrorDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error"
        Height="520"
        Width="820"
        MinHeight="420"
        MinWidth="680"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="An error occurred"
                   FontWeight="SemiBold"
                   FontSize="16"
                   Margin="0,0,0,8" />

        <TextBlock Grid.Row="1"
                   Text="{Binding Summary, Mode=OneWay}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8" />

        <TextBox Grid.Row="2"
                 Text="{Binding ErrorDetails, Mode=OneWay}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12" />

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Width="110"
                    Margin="0,0,8,0"
                    Content="Copy Details"
                    Click="CopyDetails_Click" />
            <Button Width="90"
                    IsDefault="True"
                    Content="OK"
                    Click="Ok_Click" />
        </StackPanel>
    </Grid>
</Window>
